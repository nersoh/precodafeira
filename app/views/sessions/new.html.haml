- flash.each do |name, msg|
	= content_tag :div, msg, class: "#{name} alert"
	
%h1= t 'auth.login.title'

= form_tag sessions_path do
	
	.field
		= label_tag :email
		.row
			.four.columns
				= text_field_tag :email, params[:email], class: "input"

	.field
		= label_tag :password, "#{t 'auth.field.password'}"
		.row
			.four.columns
				= password_field_tag :password, nil, class: "input"

	.actions.large.primary.btn
		= submit_tag "#{t 'auth.login.title'}"
